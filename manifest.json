{
    "manifest_version": 2,
    "name": "YTViews",
    "version": "1.0",
    "description": "YTViews stores the frequency of different videos one watches on YouTube.",
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://youtube.com/*",
                "http://youtube.com/*",
                "https://*.youtube.com/*",
                "http://*.youtube.com/*"
            ],
            "js": [
                "src/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "lib/dexie.js",
            "src/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "images/ytviews16.png",
            "32": "images/ytviews32.png",
            "48": "images/ytviews48.png",
            "128": "images/ytviews128.png"
        }
    },
    "icons": {
        "16": "images/ytviews16.png",
        "32": "images/ytviews32.png",
        "48": "images/ytviews48.png",
        "128": "images/ytviews128.png"
    }
}
